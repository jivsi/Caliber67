@{
    ViewData["Title"] = "Store Locations";
}

<style>
    .store-locations-header {
        background: linear-gradient(145deg, rgba(10, 26, 10, 0.95) 0%, #000000 100%);
        border: 2px solid #FFD700;
        padding: 2rem;
        border-radius: 10px;
        margin-bottom: 2rem;
        box-shadow: 0 0 30px rgba(255, 215, 0, 0.3);
    }

    .store-locations-header h1 {
        color: #FFD700;
        font-weight: 900;
        text-transform: uppercase;
        letter-spacing: 2px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
        font-family: 'Orbitron', sans-serif;
    }

    .store-locations-header p {
        color: #e2e8f0;
        font-size: 1.1rem;
    }

    .store-card {
        background: linear-gradient(145deg, rgba(10, 26, 10, 0.95) 0%, rgba(0, 0, 0, 0.95) 100%);
        border: 2px solid #FFD700;
        border-radius: 10px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        box-shadow: 0 0 20px rgba(255, 215, 0, 0.2);
        transition: all 0.3s ease;
    }

    .store-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0 30px rgba(255, 215, 0, 0.4);
        border-color: #FFA500;
    }

    .store-name {
        color: #FFD700;
        font-weight: 700;
        font-size: 1.5rem;
        margin-bottom: 1rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-family: 'Orbitron', sans-serif;
    }

    .store-info {
        color: #e2e8f0;
        margin-bottom: 0.5rem;
    }

    .store-info i {
        color: #FFD700;
        margin-right: 10px;
    }

    .map-container {
        border-radius: 10px;
        overflow: hidden;
        border: 2px solid #FFD700;
        box-shadow: 0 0 20px rgba(255, 215, 0, 0.3);
    }

    .map-container iframe {
        width: 100%;
        height: 400px;
        border: none;
    }
</style>

