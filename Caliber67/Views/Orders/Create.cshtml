@model Caliber67.Models.Orders.Order
@{
    ViewData["Title"] = "Checkout - Complete Your Order";
    var cart = ViewBag.Cart as Caliber67.Models.ShoppingCart.Cart;
    var user = ViewBag.User as Caliber67.Models.Identity.ApplicationUser;
    var totalAmount = ViewBag.TotalAmount as decimal? ?? 0;
    var requiresLicense = ViewBag.RequiresLicense as bool? ?? false;
}

<div class="row">
    <div class="col-lg-8 mb-4">
        <div class="card checkout-card">
            <div class="card-header checkout-header">
                <h3><i class="fas fa-shipping-fast"></i> Shipping Information</h3>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ShippingFirstName" class="form-label">First Name <span class="text-danger">*</span></label>
                            <input asp-for="ShippingFirstName" class="form-control" required />
                            <span asp-validation-for="ShippingFirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ShippingLastName" class="form-label">Last Name <span class="text-danger">*</span></label>
                            <input asp-for="ShippingLastName" class="form-control" required />
                            <span asp-validation-for="ShippingLastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ShippingAddress" class="form-label">Street Address <span class="text-danger">*</span></label>
                        <input asp-for="ShippingAddress" class="form-control" required />
                        <span asp-validation-for="ShippingAddress" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ShippingCity" class="form-label">City <span class="text-danger">*</span></label>
                            <input asp-for="ShippingCity" class="form-control" required />
                            <span asp-validation-for="ShippingCity" class="text-danger"></span>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label asp-for="ShippingState" class="form-label">State <span class="text-danger">*</span></label>
                            <input asp-for="ShippingState" class="form-control" maxlength="2" placeholder="e.g., CA" required />
                            <span asp-validation-for="ShippingState" class="text-danger"></span>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label asp-for="ShippingZipCode" class="form-label">Zip Code <span class="text-danger">*</span></label>
                            <input asp-for="ShippingZipCode" class="form-control" required />
                            <span asp-validation-for="ShippingZipCode" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ShippingPhoneNumber" class="form-label">Phone Number <span class="text-danger">*</span></label>
                            <input asp-for="ShippingPhoneNumber" class="form-control" type="tel" required />
                            <span asp-validation-for="ShippingPhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ShippingEmail" class="form-label">Email <span class="text-danger">*</span></label>
                            <input asp-for="ShippingEmail" class="form-control" type="email" required />
                            <span asp-validation-for="ShippingEmail" class="text-danger"></span>
                        </div>
                    </div>

                    @if (requiresLicense)
                    {
                        <div class="license-section">
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle"></i>
                                <strong>Firearms License Required</strong><br />
                                Since your cart contains firearms, you must upload a valid firearms license.
                            </div>
                            <div class="mb-3">
                                <label for="licenseFile" class="form-label">
                                    Upload Firearms License <span class="text-danger">*</span>
                                    <small class="text-muted">(JPG or PNG format)</small>
                                </label>
                                <input type="file" name="licenseFile" id="licenseFile" class="form-control" 
                                       accept=".jpg,.jpeg,.png" required />
                                <small class="form-text text-muted">License will be validated for expiration date.</small>
                                @if (ViewData.ModelState["License"]?.Errors?.Count > 0)
                                {
                                    <div class="text-danger">
                                        @ViewData.ModelState["License"].Errors[0].ErrorMessage
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-controller="Carts" asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Cart
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-check-circle"></i> Place Order
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card checkout-summary-card sticky-top" style="top: 20px;">
            <div class="card-header checkout-summary-header">
                <h4><i class="fas fa-shopping-bag"></i> Order Summary</h4>
            </div>
            <div class="card-body">
                @if (cart?.CartItems != null && cart.CartItems.Any())
                {
                    <div class="order-items mb-3">
                        @foreach (var item in cart.CartItems)
                        {
                        <div class="order-item d-flex justify-content-between mb-2 pb-2 border-bottom">
                            <div class="flex-grow-1">
                                <strong style="color: #f97316;">@item.Product.Name</strong>
                                <br />
                                <small class="text-muted">Qty: @item.Quantity</small>
                            </div>
                            <div class="text-end">
                                <strong>$@item.Subtotal.ToString("F2")</strong>
                            </div>
                        </div>
                        }
                    </div>

                    <div class="order-totals">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal:</span>
                            <span>$@totalAmount.ToString("F2")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Shipping:</span>
                            <span class="text-success">Free</span>
                        </div>
                        <hr style="border-color: #334155;" />
                        <div class="d-flex justify-content-between">
                            <strong class="fs-4" style="color: #f97316;">Total:</strong>
                            <strong class="fs-4" style="color: #f97316;">$@totalAmount.ToString("F2")</strong>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .checkout-card, .checkout-summary-card {
        background: linear-gradient(145deg, #1e293b 0%, #0f172a 100%);
        border: 1px solid #334155;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.4);
    }

    .checkout-header, .checkout-summary-header {
        background: linear-gradient(135deg, #1a1a1a 0%, #0a0a0a 100%);
        border-bottom: 2px solid #f97316;
        color: #f97316;
        font-weight: 700;
    }

    .checkout-header h3, .checkout-summary-header h4 {
        margin: 0;
        color: #f97316;
    }

    .form-label {
        color: #cbd5e1;
        font-weight: 600;
    }

    .text-danger {
        color: #ef4444 !important;
    }

    .license-section {
        background: rgba(249, 115, 22, 0.1);
        padding: 1.5rem;
        border-radius: 8px;
        border: 1px solid #f97316;
        margin: 1.5rem 0;
    }

    .alert-warning {
        background-color: rgba(249, 115, 22, 0.2);
        border-color: #f97316;
        color: #f97316;
    }

    .order-items {
        max-height: 300px;
        overflow-y: auto;
        padding-right: 10px;
    }

    .order-item {
        font-size: 0.9rem;
    }

    .order-totals {
        background: rgba(51, 65, 85, 0.3);
        padding: 1rem;
        border-radius: 8px;
    }

    /* Scrollbar styling for order items */
    .order-items::-webkit-scrollbar {
        width: 8px;
    }

    .order-items::-webkit-scrollbar-track {
        background: #0f172a;
        border-radius: 10px;
    }

    .order-items::-webkit-scrollbar-thumb {
        background: #f97316;
        border-radius: 10px;
    }

    .order-items::-webkit-scrollbar-thumb:hover {
        background: #ea580c;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
