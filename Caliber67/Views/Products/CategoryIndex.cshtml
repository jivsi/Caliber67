@model IEnumerable<Caliber67.Models.Product>

@{
    ViewData["Title"] = ViewBag.Category;
    bool isAdmin = ViewBag.IsAdmin ?? false;
    string category = ViewBag.Category ?? "Products";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@category</h1>

    @if (isAdmin)
    {
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Product
        </a>
    }
</div>

<!-- Category Navigation -->
<div class="row mb-4">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Browse Categories</h5>
                <div class="btn-group" role="group">
                    <a asp-action="Guns" class="btn @(category == "Firearms" ? "btn-primary" : "btn-outline-primary")">
                        <i class="fas fa-gun"></i> Firearms
                    </a>
                    <a asp-action="Ammo" class="btn @(category == "Ammunition" ? "btn-primary" : "btn-outline-primary")">
                        <i class="fas fa-bullseye"></i> Ammunition
                    </a>
                    <a asp-action="Accessories" class="btn @(category == "Accessories" ? "btn-primary" : "btn-outline-primary")">
                        <i class="fas fa-tools"></i> Accessories
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-list"></i> All Products
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <h4>No products found in this category</h4>
        <p>Check back later for new arrivals!</p>
    </div>
}
else
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 product-card">
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <div class="text-center text-muted">
                                <i class="fas fa-image fa-3x mb-2"></i>
                                <div>@item.Name</div>
                                <small>No image available</small>
                            </div>
                        </div>
                    }

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text flex-grow-1">@item.Description</p>

                        <div class="mb-2">
                            <span class="badge bg-secondary">@item.Category</span>
                            @if (!string.IsNullOrEmpty(item.SubCategory))
                            {
                                <span class="badge bg-info">@item.SubCategory</span>
                            }
                            @if (!string.IsNullOrEmpty(item.Caliber))
                            {
                                <span class="badge bg-warning">@item.Caliber</span>
                            }
                        </div>

                        <div class="mb-2">
                            @if (item.StockQuantity > 10)
                            {
                                <span class="badge bg-success">In Stock</span>
                            }
                            else if (item.StockQuantity > 0)
                            {
                                <span class="badge bg-warning">Low Stock</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Out of Stock</span>
                            }
                        </div>

                        <h4 class="text-primary mb-3">$@item.Price.ToString("F2")</h4>

                        <div class="mt-auto">
                            <div class="btn-group w-100" role="group">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">
                                    <i class="fas fa-info-circle"></i> Details
                                </a>

                                @if (isAdmin)
                                {
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                }
                            </div>

                            @if (item.IsAvailable)
                            {
                                <form asp-controller="Carts" asp-action="AddToCart" method="post" class="mt-2">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="productId" value="@item.Id" />
                                    <div class="input-group">
                                        <input type="number" name="quantity" value="1" min="1" max="@item.StockQuantity"
                                               class="form-control" placeholder="Qty" />
                                        <button type="submit" class="btn btn-success">
                                            <i class="fas fa-cart-plus"></i> Add to Cart
                                        </button>
                                    </div>
                                </form>
                            }
                            else
                            {
                                <button class="btn btn-secondary w-100 mt-2" disabled>
                                    <i class="fas fa-times-circle"></i> Out of Stock
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

<style>
    .product-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .product-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }
</style>